@model API.Models.AdminEmployee
@{
    ViewData["Title"] = "Edit Employee";
}

<style>
    /* Style for radio buttons */
    .radio-group label {
        display: block;
        margin-bottom: 5px;
    }
    .radio-group input[type="radio"] {
        display: inline-block;
        margin-right: 5px;
    }
</style>

<h1>Edit Employee</h1>

<form asp-action="EditEmployee" method="post">
    <div class="form-group">
        <label asp-for="c_empname" class="control-label">Employee Name:</label>
        <input asp-for="c_empname" class="form-control" />
        <span asp-validation-for="c_empname" class="text-danger"></span>
    </div>

    <div class="form-group radio-group">
        <label>Shift:</label>
        <label><input type="radio" asp-for="c_shift" value="Morning" /> Morning</label>
        <label><input type="radio" asp-for="c_shift" value="Afternoon" /> Afternoon</label>
        <span asp-validation-for="c_shift" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="c_dept_id" class="control-label">Department:</label>
        <select id="deptDropdown" asp-for="c_dept_id" class="form-control" asp-items="@ViewBag.Departments">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="c_dept_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
