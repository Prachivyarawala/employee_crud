@model API.Models.User
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <div class="login-container">
        <div class="content">
            <div class="text">
                Register Form
            </div>
            
                <div class="field">
                    <input type="text" name="c_username" placeholder="UserName"  asp-for="c_username">
                    <span class="fas fa-user"></span>
                    <label>UserName</label>
                </div>
                <span asp-validation-for="c_username" class="text-danger"></span>
                <div class="field">
                    <input type="text" name="c_useremail" placeholder="Email Id"  asp-for="c_useremail">
                    <span class="fas fa-envelope"></span>
                    <label>Email</label>
                </div>
                <span asp-validation-for="c_useremail" class="text-danger"></span>


                <div class="field">
                    <input type="password" name="c_userpassword" placeholder="Password" asp-for="c_userpassword">
                    <span class="fas fa-lock"></span>
                    <label>Password</label>
                </div>
                <span asp-validation-for="c_userpassword" class="text-danger"></span>
                <div class="field">
                    <input type="password" placeholder="Confirm Password" asp-for="confirmPassword" name="confirmPassword">
                    <span class="fas fa-check-circle"></span>
                    <label>Confirm Password</label>
                </div>
                <span asp-validation-for="confirmPassword" class="text-danger"></span>

                <button onclick="Register()">Sign Up</button>
                <div class="sign-up">
                    Already have Account?
                    <a asp-controller="MVCUser" asp-action="Login">signIn now</a>
                </div>
           
        </div>
    </div>

    <!-- ... (existing code) -->

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        function Register() {
            @* var token = localStorage.getItem('token'); *@
            var user = {
                c_username: $("#c_username").val(),
                c_useremail: $("#c_useremail").val(),
                c_userpassword: $("#c_userpassword").val(),
                confirmPassword: $("#confirmPassword").val()
            };

            var settings = {
                "url": "https://localhost:7072/api/UserApi/Register",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                },
                "data": JSON.stringify(user)
            };

            console.log(user);

            $.ajax(settings).done(function (response) {
                @* localStorage.setItem('token', token); *@
                console.log(response);
                alert('Successfully Registered!');
                window.location = "/MvcUser/Login";
            }).fail(function (response) {
                alert(response.responseText);
                window.location = "/MvcUser/Register";
            });
        }
    </script>



</body>



</html>
